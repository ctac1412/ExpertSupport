{
  "manifest_version": 2,
  "name": "Импорт экселя в Адванс",
  "version": "0.5",

  "description": "Плагин позволяет импортировать данные из шаблона Excel в форму Advance",

  "applications": {
    "gecko": {
      "id": "Adv-import-Excel@advance-docs.ru",
      "strict_min_version": "49.0"
    }
  },


  "sidebar_action": {
  "default_title": "Импорт",
  "default_panel": "sidebar/sidebar.html",
  "default_icon": "sidebar/sidebar_icon.png",
  "browser_style": true
},

  "permissions": [
      "storage",
      "activeTab",
      "tabs",
      "notifications",
      "<all_urls>",
      "*://*.aesthetic.ru/*",
      "*://10.250.4.13/*",
      "*://*.advance-docs.ru/*",
      "webRequest",
      "webRequestBlocking",
      "webNavigation",
      "downloads",
      "cookies"
  ],
  "background": {
    "scripts": ["background.js","./content/Agency.js","sidebar/lib/fltxt.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*.advance-docs.ru/Claim/Edit/*"],
      "js": ["./content/Agency.js","sidebar/lib/fltxt.js","jQuery.js"]
    },
    {
      "matches": ["*://getnumber.me/Protocol*"],
      "js": ["./content/getnumber.js","jQuery.js"]
    },
    {
      "matches": ["*://stage-2-docs.advance-docs.ru/Claim"],
      "js": ["./content/datapicker.js","jQuery.js"]
    },
    {
      "matches": ["*://*.advance-docs.ru/*"],
      "js": ["./content/Assistent.js"]
    }
  ]
}
